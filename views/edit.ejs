<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Producto</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">

</head>
<body>

  <header>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">Sistema de Inventario</a>
      </div>
    </nav>
  </header>

  <main>
    <section class="container mt-3">

      <% if (producto) { %>

        <form action="/update" method="post" autocomplete="off" id="formulario">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h4>Editar Producto</h4>
              <a href="/" class="btn btn-sm btn-secondary">Lista de productos</a>
            </div>
  
            <div class="card-body">

              <input type="hidden" id="id" name="id" value="<%= producto.id %>">

              <div class="mb-3 form-floating">
                <input type="text" class="form-control" value="<%= producto.nombre %>" id="nombre" name="nombre" required>
                <label for="nombre">Nombre del Producto</label>
              </div>
  
              <div class="mb-3 form-floating">
                <select name="categoria" id="categoria" class="form-select" required>
                  <option value="A" <%= producto.categoria == 'A' ? 'selected' : '' %> >Categoría A</option>
                  <option value="B" <%= producto.categoria == 'B' ? 'selected' : '' %> >Categoría B</option>
                  <option value="C" <%= producto.categoria == 'C' ? 'selected' : '' %> >Categoría C</option>
                </select>
                <label for="categoria">Categoría</label>
              </div>
  
              <div class="mb-3 form-floating">
                <input type="text" class="form-control" id="proveedor" value="<%= producto.proveedor %>" name="proveedor" required>
                <label for="proveedor">Proveedor</label>
              </div>
  
              <div class="mb-3 form-floating">
                <input type="number" step="0.01" min="0" class="form-control" id="precio" value="<%= producto.precio %>" name="precio" required>
                <label for="precio">Precio</label>
              </div>

              <div class="mb-3 form-floating">
                <input type="number" step="1" min="0" class="form-control" id="stock" value="<%= producto.stock %>" name="stock" required>
                <label for="stock">Stock</label>
              </div>
            </div>
  
            <div class="card-footer">
              <button type="submit" class="btn btn-sm btn-primary">Actualizar</button>
              <a href="/" class="btn btn-sm btn-secondary">Cancelar</a>
            </div>
          </div>
        </form>
      <% } %>

      
    </section>
  </main>

  <script>
    const formulario = document.querySelector("#formulario");

    formulario.addEventListener("submit", (event) => {
      event.preventDefault();
      if(confirm("¿Estás seguro de actualizar este producto?")){
        formulario.submit();
      }
    })
  </script>
</body>
</html>